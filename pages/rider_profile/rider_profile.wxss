/* pages/rider_profile/rider_profile.wxss */
.container {
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
    width: 100%;
    padding: 0rpx;
    box-sizing: border-box;
}

.header {
    display: flex;
    align-items: center;
    background-color: #00bfa5;
    padding: 85rpx;
    border-radius: 15rpx;
    color: #fff;
    width: 100%;
}

.profile-pic {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-left: 50rpx;
}

.set-profile {
    margin-left: 20rpx;
    margin-bottom: 50rpx;
    font-size: 35rpx;
}

.stats-container {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    background-color: #ffffff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
    padding: 20rpx;
  }
  
  /* 每项的布局 */
  .stat-item {
    text-align: center;
    flex: 1;
    margin: 0 10rpx;
    padding: 20rpx 10rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #f9f9f9; /* 添加背景色 */
    border-radius: 24rpx; /* 内部Box的圆角 */
  }
  
  /* 标签文字样式 */
  .stat-label {
    font-size: 28rpx;
    font-weight: bold;
    color: #000000;
  }
  
  /* 数值样式 */
  .stat-value {
    margin-top: 8rpx;
    font-size: 36rpx;
    font-weight: bold;
    color: #37B34A; /* 对应绿色值 */
  }
  
  /* 分隔线样式 */
  .divider {
    width: 1rpx;
    height: 80rpx;
    background-color: #e0e0e0;
  }

/* 主容器样式 */
.menu-container {
    background-color: #ffffff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    padding: 20rpx;
    margin: 20rpx auto;
    width: 90%; /* 减小整体宽度 */
  }
  
  /* 单个菜单项样式 */
  .menu-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx 0; /* 增加高度 */
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  /* 去除最后一项的分割线 */
  .menu-item:last-child {
    border-bottom: none;
  }
  
  /* 图标样式 */
  .menu-icon {
    width: 50rpx; /* 图标大小适配 */
    height: 50rpx;
    margin-right: 20rpx;
  }
  
  /* 标题样式 */
  .menu-title {
    font-size: 32rpx; /* 字体稍大 */
    font-weight: bold; /* 加粗字体 */
    color: #333333;
    flex: 1; /* 标题占据剩余空间 */
  }
  
  /* 版本号样式（可选） */
  .menu-version {
    font-size: 26rpx; /* 字体稍大 */
    color: #aaaaaa;
    font-weight: bold; /* 加粗字体 */
  }
  /* 退出按钮容器 */
.logout-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20rpx;
    margin-top: 210rpx;
  }
  
  /* 退出按钮样式 */
  .logout-button {
    background-color: #f54d4d; /* 红色背景 */
    color: #ffffff; /* 白色文字 */
    font-size: 32rpx; /* 字体大小 */
    font-weight: bold; /* 加粗字体 */
    border: none; /* 移除边框 */
    border-radius: 50rpx; /* 圆角 */
    padding: 20rpx 100rpx; /* 内边距 */
    box-shadow: 0 8rpx 16rpx rgba(245, 77, 77, 0.3); /* 阴影效果 */
    transition: all 0.3s ease; /* 添加交互效果 */
  }
  
  /* 按钮交互效果 */
  .logout-button:active {
    background-color: #e44040; /* 点击时更深的红色 */
    box-shadow: 0 4rpx 8rpx rgba(228, 64, 64, 0.3); /* 阴影变小 */
  }