.container {
    padding: 20px;
  }
  
  .form-item {
    margin-bottom: 20px;
    display: flex;
    align-items: center;
  }
  
  .form-item text {
    flex: 1;
  }
  
  .avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-left: 10px;
  }
  
  input {
    flex: 2;
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 10px;
  }
  
  .submit-button {
    background-color: #1aad19;
    color: white;
    padding: 10px;
    border: none;
    border-radius: 4px;
  }
  