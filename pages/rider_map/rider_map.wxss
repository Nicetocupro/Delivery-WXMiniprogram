/* 路程信息区域 */
.route-info {
    position: absolute;
    top: 20rpx;
    left: 20rpx;
    background-color: rgba(0, 0, 0, 0.6);
    padding: 10rpx;
    border-radius: 10rpx;
    color: white;
  }
  
  /* 路程信息文字样式 */
  .route-info text {
    display: block;
    font-size: 28rpx;
    margin-bottom: 8rpx;
  }