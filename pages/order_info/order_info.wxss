/* order-info-container.wxss */
.order-info-container {
    background-color: #f5f5f5;
    padding: 20rpx;
  }
  
  .order-info-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    padding: 20rpx;
    border-radius: 8rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  }
  
  .order-number {
    font-size: 32rpx;
    font-weight: bold;
  }
  
  .order-status {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #7b7b7b;
  }
  
  .status-image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
  }
  
  .order-info-body {
    background-color: #fff;
    padding: 20rpx;
    border-radius: 8rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
    margin-top: 20rpx;
  }
  
  .order-info-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .order-info-item:last-child {
    border-bottom: none;
  }
  
  .label {
    font-size: 28rpx;
    color: #7b7b7b;
  }
  
  .value {
    font-size: 30rpx;
    color: #333;
  }
  
  .order-details-container {
    background-color: #fff;
    padding: 20rpx;
    border-radius: 8rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
    margin-top: 20rpx;
  }
  
  .order-details-header {
    font-size: 32rpx;
    font-weight: bold;
    border-bottom: 1rpx solid #f0f0f0;
    padding-bottom: 10rpx;
  }
  
  .order-details-list {
    margin-top: 20rpx;
  }
  
  .order-details-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .order-details-item:last-child {
    border-bottom: none;
  }
  
  .dish-name {
    font-size: 28rpx;
    color: #333;
    flex-grow: 1;
  }
  
  .dish-count {
    font-size: 26rpx;
    color: #7b7b7b;
    margin: 0 20rpx;
  }
  
  .dish-price {
    font-size: 28rpx;
    color: #333;
  }
  
  .dish-flavor {
    font-size: 26rpx;
    color: #7b7b7b;
  }