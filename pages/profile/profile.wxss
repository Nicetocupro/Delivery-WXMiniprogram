/* 总容器设置 */
.container {
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
    width: 100%;
    padding: 0rpx;
    box-sizing: border-box;
}

.header {
    display: flex;
    align-items: center;
    background-color: #00bfa5;
    padding: 60rpx;
    border-radius: 15rpx;
    color: #fff;
    width: 100%;
}

.profile-pic {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-left: 50rpx;
}

.set-profile {
    margin-left: 20rpx;
    margin-bottom: 50rpx;
    font-size: 35rpx;
}

/* 我的订单、工具与服务、账户与设置 各个部分的容器样式 */
.section-container {
    width: 90%;  /* 宽度设为90%，让两边留出空白，适配不同屏幕 */
    background-color: #ffffff;
    padding: 20rpx;
    border-radius: 15rpx;
    margin: 0 auto 20rpx;  /* 上下间距20rpx，居中对齐 */
    border: 1px solid #e0e0e0;
    box-sizing: border-box;
    margin-top: 30rpx;  /* 增加顶部的间距，调整与上方的距离 */
}

/* 标题样式（我的订单、工具与服务、账户与设置） */
.section-title {
    font-weight: bold;
    padding: 20rpx 0;
    text-align: center;  /* 标题居中 */
    margin-bottom: 10rpx;
}

/* 内容部分样式，确保子项在容器内水平均匀分布 */
.section-content {
    display: flex;
    justify-content: space-around; /* 或者使用 space-between */
    width: 100%;
    gap: 20rpx; /* 设置每个section-item之间的间距 */
}

/* 每个子项的布局和样式 */
.section-item {
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 图片样式，统一大小 */
.section-item image {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 10rpx;
}

/* 文本样式 */
.section-item text {
    font-size: 24rpx;
}