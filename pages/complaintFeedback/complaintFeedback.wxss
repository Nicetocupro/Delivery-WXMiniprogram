.container {
    padding: 20px;
  }
  
  .tab {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20px;
  }
  
  .tab button {
    flex: 1;
    padding: 10px;
    background-color: #007AFF;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }
  
  .feedback-input {
    width: 100%;
    height: 100px;
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 10px;
  }
  
  .phone-input {
    width: 100%;
    margin-top: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 10px;
  }
  
  .hint {
    margin-top: 10px;
    font-size: 12px;
    color: #999;
  }
  
  .records-list {
    margin-top: 10px;
  }
  
  .record-item {
    border-bottom: 1px solid #ccc;
    padding: 10px 0;
  }
  