/* 页面整体容器 */
.container {
    padding: 20rpx;
    background-color: #f8f8f8;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding-bottom: 100rpx; /* 留出空间给底部按钮 */
}

/* 新增收货地址按钮 */
.add-button {
    position: fixed;
    bottom: 20rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    padding: 20rpx;
    background-color: #27ae60;
    color: white;
    border: none;
    font-size: 28rpx;
    border-radius: 5rpx;
    text-align: center;
}

/* 地址列表 */
.address-list {
    flex: 1;
    margin-bottom: 100rpx; /* 给底部按钮留出空间 */
    padding-bottom: 10rpx; /* 调整底部间距 */
    width: 90%;
}

/* 单个地址项 */
.address-item {
    display: flex;
    flex-direction: column; /* 地址卡片内部采用垂直布局 */
    justify-content: space-between;
    background-color: white;
    border-radius: 10rpx;
    padding: 20rpx;
    margin-bottom: 10rpx;
    box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
    position: relative;
    width: 95%; /* 地址卡片宽度占满父容器 */
    max-width: 1000rpx; /* 限制最大宽度 */
    margin-left: auto;
    margin-right: auto;
}

/* 默认地址的特殊样式 */
.default-selected {
    border: 2rpx solid #f39c12; /* 边框颜色突出显示 */
    background-color: #fff7e6; /* 背景色稍微变淡 */
    display: flex;
    flex-direction: column; /* 地址卡片内部采用垂直布局 */
    justify-content: space-between;
    border-radius: 10rpx;
    padding: 20rpx;
    margin-bottom: 10rpx;
    box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
    position: relative;
    width: 95%; /* 地址卡片宽度占满父容器 */
    max-width: 1000rpx; /* 限制最大宽度 */
    margin-left: auto;
    margin-right: auto;
}

/* 地址详情部分 */
.address-details {
    flex: 1;
}

/* 地址文字内容 */
.address-details text {
    display: block;
    color: #333;
    font-size: 28rpx;
    margin-bottom: 10rpx;
}

/* 地址操作按钮区域 */
.address-actions {
    display: flex;
    justify-content: space-between; /* 水平排列按钮 */
    margin-top: 15rpx; /* 给按钮区域顶部留出空间 */
}

/* 操作按钮的基础样式 */
.address-actions button {
    font-size: 24rpx;
    padding: 10rpx;
    border-radius: 5rpx;
    border: none;
    cursor: pointer;
    width: 150rpx;
    text-align: center;
}

/* "默认地址" 按钮样式 */
.default-button {
    background-color: #f39c12;
    color: white;
}

/* "编辑" 按钮样式 */
.edit-button {
    background-color: #3498db;
    color: white;
}

/* "删除" 按钮样式 */
.delete-button {
    background-color: #e74c3c;
    color: white;
}
