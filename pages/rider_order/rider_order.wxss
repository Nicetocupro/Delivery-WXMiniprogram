/* 样式重置 */
  /* 容器 */
  .container {
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 0px;
  }
  
  /* TabBar */
  .tab-bar {
    top: 5px;
    width: 100%;
    display: flex;
    justify-content: space-around;
    padding: 10px 0px;
    font-size: 16px;
  }
  
  .tab {
    flex: 1;
    text-align: center;
    padding: 5px;
    border: 1px solid black;
    color: #333;
  }
  
  .tab:hover {
    cursor: pointer;
  }
  
  /* 任务列表 */
  .task-list {
    top: 5px;
    flex: 1;
    padding: 0px;
    background-color: #f5f5f5;
  }
  
  /* 任务卡片 */
  .task-card {
    background-color: #fff;
    margin-bottom: 10px;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  /* 任务信息 */
  .task-info {
    margin-bottom: 10px;
  }
  
  .task-info .task-address,
  .task-info .task-amount,
  .task-info .task-distance,
  .task-info .task-timelimit {
    font-size: 14px;
    color: #333;
    margin-bottom: 5px;
  }
  
  /* 抢单按钮 */
  .grab-button {
    background-color: #2196F3;
    color: white;
    border: none;
    padding: 10px;
    width: 100%;
    border-radius: 5px;
    font-size: 16px;
  }
  
  .grab-button:hover {
    cursor: pointer;
  }
  
  /* 加载中提示 */
  .loading {
    text-align: center;
    padding: 20px;
    font-size: 16px;
    color: #999;
  }
  