.write-review-container {
    padding: 20px;
    background-color: #f8f8f8;
    min-height: 100vh;
    box-sizing: border-box;
}

.review-textarea {
    width: 100%;
    height: 150px;
    padding: 10px;
    margin-bottom: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #fff;
    font-size: 16px;
    box-sizing: border-box;
}

.upload-button {
    width: 100%;
    padding: 10px;
    margin-bottom: 20px;
    background-color: #007aff;
    color: #fff;
    border: none;
    border-radius: 5px;
    font-size: 16px;
}

.image-container {
    margin-bottom: 20px;
}

.review-image {
    width: 100px;
    height: 100px;
    margin-right: 10px;
    border-radius: 5px;
}

.submit-button {
    width: 100%;
    padding: 10px;
    background-color: #007aff;
    color: #fff;
    border: none;
    border-radius: 5px;
    font-size: 16px;
}
