.order_page {
    background: #F6F6F6;
    padding: 10px;
}

/* 顶部分类导航栏 */
.status_nav {
    display: flex;
    justify-content: space-around;
    background-color: #fff;
    padding: 10px;
    border-radius: 10rpx;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    margin-bottom: 20rpx;
}

.status_tab {
    font-size: 16px;
    padding: 10px 20px;
    border-radius: 20rpx;
    text-align: center;
    cursor: pointer;
}

/* 订单列表 */
.order_list {
    background: #fff;
    width: 95%;
    margin: 10px auto;
    padding: 15rpx;
    border-radius: 10rpx;
    box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
}

.order_container {
    margin-bottom: 20rpx;
}

.money {
    border-bottom: 1px solid #f2f2f2;
    padding: 30rpx;
    font-size: 17px;
    color: #666;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.order_image {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    margin-top: 20rpx;
    float: right;
}

.detail {
    margin: 15px 0 5px 20px;
    font-size: 20px;
    color: #d0d0d0;
}

.label_text {
    color: #d0d0d0;
}

.amount_text {
    font-size: 40rpx;
    color: #333;
}

.division {
    width: 100%;
    height: 1px;
    background: #f2f2f2;
    margin-top: 40rpx;
}

.btn {
    background: #fff;
    color: #7bbfea;
    border-radius: 10rpx;
    font-size: 30rpx;
    padding: 10rpx 20rpx;
    border: 1px solid #7bbfea;
    text-align: center;
    display: inline-block;
    width: 100%;
}

.division2 {
    width: 100%;
    height: 20rpx;
    background: #f2f2f2;
    margin-top: 20rpx;
}
